<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivImagenInmuebleContrato"
        android:layout_marginStart="32dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/btn_star_big_on"
        android:layout_height="150dp"
        android:layout_width="150dp"/>

    <TextView
        android:id="@+id/tvDireccionContrato"
        android:layout_width="81dp"
        android:layout_height="33dp"
        android:layout_marginTop="40dp"
        android:hint="Direccion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toEndOf="@+id/ivImagenInmuebleContrato"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/btnDetalleContrato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Detalles"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toEndOf="@+id/ivImagenInmuebleContrato"
        app:layout_constraintTop_toBottomOf="@+id/tvDireccionContrato" />

</androidx.constraintlayout.widget.ConstraintLayout>